module RoboCompLidar3D
{
  struct TPoint
  {
    float x;
    float y;
    float z;
    int intensity;
  };
  sequence<TPoint> TPoints;

  struct TData
  {
    TPoints points;
    float period;
    long timestamp;
  };

  interface Lidar3D
  {
	/** @brief Get lidar data */
	TData getLidarData(string name, int start, int len, int decimationfactor);
  };

};
