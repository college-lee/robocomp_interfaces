// Simple interface to move an arm in IK mode by requesting small displacements in tip position in base ref. frame

module RoboCompSimpleArm
{
	struct Pose6D
	{
		float x;
		float y;
		float z;
		float rx;
		float ry;
		float rz;
	}

	interface SimpleArm
	{
		void SimpleArm_openFingers(float d) = 0;
		void SimpleArm_moveTo(Pose6D pose) = 0;
		void SimpleArm_stop() = 0;
		void SimpleArm_closeFingers(float d) = 0;
	};
};